<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="8dp"
>

    <TextView
        android:id="@+id/number_tv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:paddingStart="5dp"
        android:text="1"
        android:layout_marginStart="12dp"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/score_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="29dp"
        android:src="@drawable/ktv_rank_sss"
        app:layout_constraintRight_toLeftOf="@id/like_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score_tv"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginTop="43dp"
        android:text="99åˆ†"
        android:textColor="#FFDA56"
        android:textSize="12dp"
        android:textStyle="normal"
        app:layout_constraintLeft_toLeftOf="@id/score_iv"
        app:layout_constraintRight_toRightOf="@id/score_iv"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/like_iv"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="26dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingEnd="5dp"
        android:paddingBottom="5dp"

        android:src="@drawable/chorus_normal_like"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>